<title>Course folder edit</title>
<h1>Update your course folder</h1>

<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="row">
			<%= form_for(@course_folder) do |f|%>
				<%= render 'shared/course_folder_error_messages'%>
				<%= f.label :course_name%>
				<%= f.text_field :name, placeholder: "Enter course code", class: 'form-control', id: "course-name-input", data: {autocomplete_source: Course.order(:name).map(&:name)} %>
				<%= f.label :folder_name %>
				<%= f.text_field :title,  class: 'form-control'%>

				<%= f.label :year%>
				<%= f.number_field :year,  class: 'form-control'%>

				<%= f.label :term%>

				<%= f.select(:term, options_for_select([['Spring'], ['Summer'], ['Fall']]),  class: 'form-control') %>
				<%= f.submit "Edit", class: "btn btn-primary submit-btn" %>
			<% end %>
		</div>
	</div>
</div>
