<div class="container" >
<div class="row">
  <div class="course_header">
    <h1><%= @course.name %>: <%= @course.title %></h1>
    
    <%= link_to "Add notes",  "#", class: "add_note"%>
    <hr>
  </div>
  <div class="list_of_note">
    <% @user_folders.each do |x| %>
      <div class="note">
        <aside class="col-md-4">
          <section class="note_info">
          
          <p></p>
          <h1>
            Title: <%= x.title%>
          </h1>
          <p></p>
          <h1>
            Author: <%= @user.name %>
          </h1>
          <p></p>
          <h1>
            Term: <%= x.term %>, <%= x.year%>
          </h1>
          <p></p>
          <p>
            <%= link_to "Show", '#'%>/
            <%= link_to "Edit", '#'%>/
            <%= link_to "Delete", '#'%>
          </p>
          </section>
        </aside>
      </div>
    <% end %>
    <% @non_user_folders.each do |x| %>
      <div class="note">
        <aside class="col-md-4">
          <section class="note_info">
          
          <p></p>
          <h1>
            Title: <%= x.title%>
          </h1>
          <p></p>
          <h1>
            Author: <%= x.user.name %>
          </h1>
          <p></p>
          <h1>
            Term: <%= x.term %>, <%= x.year%>
          </h1>
          <p></p>
          </section>
        </aside>
      </div>
    <% end %>
  </div>

</div>
</div>