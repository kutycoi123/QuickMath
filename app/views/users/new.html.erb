  <style>
    .custom-login-input{
        padding: 3px;
        border-radius: 6px;
        width: 50%;
        margin-left: 25%;
        margin-right: 25%;
    } 
    </style>

<div class="container-fluid text-center">
  <title>Sign Up</title>
         <div class="container-fluid text-center">
            <div class="row content">
                 <h1>Sign Up</h1>
                        <hr>

        <% provide(:title, "Sign Up") %>
        <div class="signup">
        <%= form_for(@user, url: signup_path) do |f| %>

         <%= f.label :name %>
        <%= f.text_field :name, class: "custom-login-input" %>

        <%= f.label :email%>
        <%= f.email_field :email , class: "custom-login-input"  %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "custom-login-input" %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation , class:"custom-login-input"%>

                    <hr>
        <%= f.submit "Sign Up", class: "custom-login-input" %>
        <% end %>
        </div>
    </div>
</div>
</div>




